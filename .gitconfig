[user]
  name = Vincent Cogne
  email = xpac27@gmail.com

[core]
  editor = vi
  quotepath = false
	excludesfile = /Users/vincent.cogne/.gitignore_global

[rerere]
  enabled = false

[alias]
  br = branch -v
  ba = branch -va
  cm = commit -v
  co = checkout
  st = status
  ru = remote update
  nlog = log --name-status --decorate
  ls = log --pretty=oneline --abbrev-commit --decorate
  gr = log --pretty=oneline --abbrev-commit --decorate --graph
  slog = log --pretty=oneline
  dlog = log -p
  ci = commit -v
  wip = ci -m "WIP"
  openbug = !/usr/local/bin/dm_openbug.sh
  closebug = !/usr/local/bin/dm_closebug.sh
  untracked = !/usr/local/bin/dm_untracked.sh
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[color]
  ui = auto

[merge]
  summary = true

[push]
  default = simple
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
