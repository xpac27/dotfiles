[ui]
username = Vincent Cogne <vincent.cogne@king.com>
editor = vim
commitsubrepos = True

[phases]
checksubrepos = abort

[pager]
pager = LESS='FRX' less

[color]
mode = auto

[extensions]
pager =
color =
purge =
eol =
graphlog =
largefiles =
strip = 
hggit=

[alias]
br = branches
undo = revert --no-backup
__mystatus = status
st = !hg __mystatus $($HG root) $HG_ARGS
